<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.ccrawl.android"
      android:versionCode="1"
      android:versionName="1.0">

    <application android:icon="@drawable/icon" android:label="Public Crawls" android:name=".CampusCrawlerApp">
        <activity android:name="PublicEventsActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".EventActivity" android:label="Event Details"></activity>
        <activity android:name="MyEventsActivity" android:label="My Crawls"></activity>
        
    </application>
    
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>